<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        style="@style/MyCardViewStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/track"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:drawableLeft="@drawable/ic_audiotrack_black_18dp"
            />


        <EditText
            android:id="@+id/track_ET"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:hint="Track"
            android:theme="@style/MyEditText"
            android:inputType="text"
            android:maxLines="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="60dp"

            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        style="@style/MyCardViewStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:text="Album:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="left|center"
            android:drawableLeft="@drawable/ic_album_black_18dp"
            />

        <EditText
            android:id="@+id/album_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Album"
            android:theme="@style/MyEditText"
            android:inputType="text"
            android:maxLines="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        style="@style/MyCardViewStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="left|center"
            android:text="Artist:"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:drawableLeft="@drawable/ic_supervisor_account_black_18dp"
            />


        <EditText
            android:id="@+id/artist_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Artist"
            android:theme="@style/MyEditText"
            android:inputType="text"
            android:maxLines="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            />

    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        style="@style/MyCardViewStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="left|center"
            android:text="Genre:"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:drawableLeft="@drawable/ic_filter_list_black_18dp"
            />
        <EditText
            android:id="@+id/genre_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Genre"
            android:theme="@style/MyEditText"
            android:inputType="text"
            android:maxLines="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            />


    </android.support.v7.widget.CardView>


    <at.markushi.ui.CircleButton
        android:id="@+id/okEdit2"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:src="@drawable/ic_done_white_24dp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_gravity="center|bottom"
        android:visibility="invisible"
        />


</LinearLayout>